{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "camelcase": [
            "error",
            {
                "properties": "always",
                "allow": [
                    "error_code",
                    "next_cursor"
                ]
            }
        ],
        "eol-last": ["error", "always"],
        "indent": ["error", 4],
        "no-unused-expressions": [
            "warn",
            {}
        ],
        "semi": ["error", "always"]
    }
}
